<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/home_search_frame"
        android:drawableRight="@drawable/icon_search"
        android:hint="输入搜索关键字"
        android:maxLength="15"
        android:maxLines="1"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:textColor="@color/color_cccccc"
        android:textCursorDrawable="@null"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_dedede"
        android:layout_marginTop="6dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dp"
            android:text="推荐专家"
            android:textColor="@color/color_13386d"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="3dp"
            android:background="@color/color_13386d"
            android:text="推荐专家"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/color_dedede" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/export_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="false"
        android:scrollbars="vertical" />

</LinearLayout>
