<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_back_btn" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="填写现场指导信息"
                android:textColor="@color/color_13386d"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(所有内容为必填项)"
                android:textColor="@color/color_666666"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_dedede" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="指定专家"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:id="@+id/guide_select_export"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="4dp"
                        android:src="@drawable/icon_select_export" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="宋仲基"
                        android:textSize="16sp"
                        android:textColor="@color/color_13386d"
                        android:visibility="gone"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="项目地点"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.48"
                    android:background="@drawable/advisory_edittext_frame"
                    android:paddingLeft="10dp"
                    android:popupBackground="@android:color/white"
                    android:spinnerMode="dropdown" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.04" />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="0.48"
                    android:background="@drawable/advisory_edittext_frame"
                    android:paddingLeft="10dp"
                    android:popupBackground="@android:color/white"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="项目名称"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/advisory_edittext_frame"
                    android:paddingLeft="10dp"
                    android:textColor="@color/color_cccccc"
                    android:textCursorDrawable="@null"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联&#160;&#160;系&#160;&#160;人"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/advisory_edittext_frame"
                    android:paddingLeft="10dp"
                    android:textColor="@color/color_cccccc"
                    android:textCursorDrawable="@null"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系电话"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/advisory_edittext_frame"
                    android:inputType="phone|number"
                    android:paddingLeft="10dp"
                    android:textColor="@color/color_cccccc"
                    android:textCursorDrawable="@null"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="起止日期"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="问题描述"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="4dp"
                    android:text="(请详细描述项目现状和问题，越详细越好，便于专家更准确地为您分析解答)"
                    android:textColor="@color/color_999999"
                    android:textSize="12sp" />
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/advisory_edittext_frame"
                android:gravity="left|top"
                android:inputType="textMultiLine"
                android:maxLines="15"
                android:minLines="1"
                android:scrollbars="vertical"
                android:textColor="@color/color_cccccc"
                android:textCursorDrawable="@null"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@drawable/submit_style"
                android:text="确认提交"
                android:textColor="@color/color_ffffff"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
