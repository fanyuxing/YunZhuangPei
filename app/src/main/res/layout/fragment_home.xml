<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            app:elevation="0dp">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="#000000"
                app:layout_scrollFlags="scroll">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">
                           <ImageView
                               android:id="@+id/home_image"
                               android:layout_width="match_parent"
                               android:layout_height="0dp"
                               android:src="@drawable/home"
                               android:scaleType="fitCenter" />


                           <View
                               android:layout_width="match_parent"
                               android:layout_height="5dp"
                               android:layout_below="@+id/home_image"/>

                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="33dp"
                               android:layout_marginLeft="14dp"
                               android:layout_marginRight="14dp"
                               android:background="@drawable/home_search_frame"
                               android:layout_alignParentBottom="true">

                               <TextView
                                   android:id="@+id/home_search_btn"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:text="输入技术问题关键字"
                                   android:textColor="#cccccc"
                                   android:textSize="14sp"
                                   android:layout_centerVertical="true"
                                   android:paddingLeft="10dp"
                                   android:gravity="center_vertical"
                                   android:layout_toLeftOf="@+id/voice"
                                   android:layout_marginRight="2dp"/>

                               <ImageView
                                   android:id="@+id/voice"
                                   android:layout_width="33dp"
                                   android:layout_height="33dp"
                                   android:src="@drawable/voice"
                                   android:layout_centerVertical="true"
                                   android:layout_toLeftOf="@+id/vertical_line"
                                   android:layout_marginRight="2dp"
                                   android:padding="8dp"/>

                               <View
                                   android:id="@+id/vertical_line"
                                   android:layout_width="1dp"
                                   android:layout_height="16dp"
                                   android:layout_centerVertical="true"
                                   android:background="@color/color_f2f2f2"
                                   android:layout_toLeftOf="@+id/camera"
                                   android:layout_marginRight="2dp"/>

                               <ImageView
                                   android:id="@+id/camera"
                                   android:layout_width="33dp"
                                   android:layout_height="33dp"
                                   android:src="@drawable/camera"
                                   android:layout_alignParentRight="true"
                                   android:layout_centerVertical="true"
                                   android:layout_marginRight="2dp"
                                   android:padding="8dp"/>
                           </RelativeLayout>

                       </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <Button
                            android:id="@+id/button1"
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="15"
                            android:background="@drawable/home_advisory_button"
                            android:text="我要咨询"
                            android:textColor="#ffffff"
                            android:textSize="14sp" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <Button
                            android:id="@+id/button2"
                            android:layout_width="0dp"
                            android:layout_height="45dp"
                            android:layout_weight="15"
                            android:background="@drawable/home_training_button"
                            android:text="我要培训"
                            android:textColor="#13386d"
                            android:textSize="14sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:background="#f2f2f2"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_ffffff"/>

                        <LinearLayout
                            android:id="@+id/button3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/training_process" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="工艺流程"
                                android:textColor="#333333"
                                android:textSize="12sp"
                                android:layout_marginLeft="4dp"/>
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_ffffff"/>

                        <LinearLayout
                            android:id="@+id/button4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/training_question" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="问题解答"
                                android:textColor="#333333"
                                android:textSize="12sp"
                                android:layout_marginLeft="4dp"/>
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_ffffff"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_ffffff"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:background="@color/color_f2f2f2"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_ffffff"/>
                        <LinearLayout
                            android:id="@+id/button5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/advisory_answer" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="专家解答"
                                android:textColor="#333333"
                                android:textSize="12sp"
                                android:layout_marginLeft="4dp"/>
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_ffffff"/>

                        <LinearLayout
                            android:id="@+id/button6"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/advisory_guide" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="现场指导"
                                android:textColor="#333333"
                                android:textSize="12sp"
                                android:layout_marginLeft="4dp"/>
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_ffffff"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dp"/>
                </LinearLayout>
            </android.support.design.widget.CollapsingToolbarLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/latest_news"
                    android:textColor="@color/color_13386d"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/tv_count_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/color_13386d"
                    android:text="@string/latest_news"
                    android:textSize="16sp"
                    android:layout_alignParentBottom="true"/>

                <TextView
                    android:id="@+id/jump_all_news_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="全部资讯"
                    android:textColor="@color/color_999999"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/color_dedede" />

        </android.support.design.widget.AppBarLayout>


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/my_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:nestedScrollingEnabled="false"/>
        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>
