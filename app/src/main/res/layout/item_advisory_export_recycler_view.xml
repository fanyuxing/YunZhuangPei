<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="14dp"
    android:layout_marginRight="14dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/pic_example_advisory_export" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/advisory_export_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="宋仲基"
            android:textSize="14sp"
            android:textColor="@color/color_13386d"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="远大住工  高级工程师"
            android:textSize="10sp"
            android:textColor="@color/color_999999"
            android:layout_below="@+id/advisory_export_name"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="长沙市"
            android:textSize="8sp"
            android:textColor="@color/color_999999"
            android:layout_toLeftOf="@+id/accept_reserve_scene"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"/>

        <Button
            android:id="@+id/accept_reserve_scene"
            android:layout_width="80dp"
            android:layout_height="16dp"
            android:text="接受预约现场"
            android:textSize="9sp"
            android:textColor="@color/color_13386d"
            android:background="@drawable/advisory_export_accept_btn"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="16dp"
            android:text="接受在线支持"
            android:textSize="9sp"
            android:textColor="@color/color_13386d"
            android:background="@drawable/advisory_export_accept_btn"
            android:layout_below="@+id/accept_reserve_scene"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"/>

        <!--example-->
        <TextView
            android:id="@+id/item_tv_export"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="item"
            android:textColor="@color/color_ffffff"
            android:layout_marginTop="30dp"/>

        <com.pcassem.yunzhuangpei.view.FlowLayout
            android:id="@+id/flowlayout_export_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>