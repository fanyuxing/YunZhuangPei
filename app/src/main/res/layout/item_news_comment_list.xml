<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp">

        <com.pcassem.yunzhuangpei.view.CircleImageView
            android:id="@+id/user_head_picture"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_centerVertical="true"
            android:src="@drawable/personal_head_picture"
            app:border_width="1dp"
            app:border_color="@color/color_999999"/>

        <TextView
            android:id="@+id/comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户昵称"
            android:textSize="14sp"
            android:textColor="@color/color_666666"
            android:layout_toRightOf="@+id/user_head_picture"
            android:layout_marginLeft="12dp"/>

        <TextView
            android:id="@+id/comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="恭喜恭喜"
            android:textColor="@color/color_333333"
            android:textSize="16sp"
            android:layout_below="@+id/comment_name"
            android:layout_toRightOf="@+id/user_head_picture"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_999999"
        android:layout_gravity="bottom"/>

</LinearLayout>